@page
@model RazorPagesGeneral.Pages.Employees.EmployeesModel
@{
	ViewData["Tittle"] = "Employees";
	ViewData["ShowButtons"] = true;
	
}

@if(TempData["SuccesMessage"] != null)
{
	<div class="alert-success text-center">
		@TempData["SuccesMessage"]
	</div>
}

<form method="get" class= "mb-3">
	<div class=" input-group">
		<input class=" form-control" asp-for = "SearchTerm"/>
		<div class=" input-group-append">
			<button type="submit" class="btn btn-primary">Search</button>
		</div>
	</div>
</form>


<div class=" row justify-content-center m-3">
	<div class="col col-lg-8 ">
		@await Component.InvokeAsync("HeadCount")
	</div>
</div>
<div class=" row ">
	@foreach(var item in Model.Employees)
	{
		<div class="col-12 col-sm-6 col-lg-4">
			<partial name="_DisplayEmployeePartial" model="item" view-data="ViewData"/>
		</div>
	}

</div>
